<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical" android:padding="100dp"
              android:paddingLeft="100dp" android:paddingTop="100dp" android:paddingRight="100dp"
              android:paddingBottom="100dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_login_string"
            android:id="@+id/lbl_login" android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_login" android:textStyle="bold" android:inputType="text"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_login_string"
            android:id="@+id/btn_login" android:layout_gravity="center_horizontal"/>
</LinearLayout>